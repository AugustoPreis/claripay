# EditorConfig - Mantém formatação consistente entre IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.java]
indent_size = 2

[*.xml]
indent_size = 2

[*.properties]
indent_size = 2

[*.sql]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Dockerfile*]
indent_size = 2

[*.sh]
indent_size = 2
